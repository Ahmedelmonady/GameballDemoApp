<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/btnWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:text="Hello World!"
            app:layout_constraintStart_toStartOf="@+id/btnRegisterAuto"
            app:layout_constraintTop_toBottomOf="@+id/btnRegisterAuto" />

        <Button
            android:id="@+id/btnRegisterAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:text="Hello World!"
            app:layout_constraintStart_toStartOf="@+id/btnRegisterManual"
            app:layout_constraintTop_toBottomOf="@+id/btnRegisterManual" />

        <Button
            android:id="@+id/btnRegisterManual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="44dp"
            android:text="Hello World!"
            app:layout_constraintStart_toStartOf="@+id/playerUniqueIdInput"
            app:layout_constraintTop_toBottomOf="@+id/playerUniqueIdInput" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/playerUniqueIdInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="187dp"
            android:hint="Player Unique Id"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>